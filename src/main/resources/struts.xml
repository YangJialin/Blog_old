<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.locale" value="zh_CN"></constant>
    <constant name="struts.i18n.encoding" value="UTF-8"></constant>
    <constant name="struts.serve.static.browserCache" value="false"></constant>
    <constant name="struts.devMode" value="false"></constant>
    <constant name="struts.i18n.reload" value="true"></constant>
    <constant name="struts.configuration.xml.reload" value="true"></constant>

    <package name="default" namespace="/" extends="struts-default">
        <!--demo-->
        <action name="loginName" class="com.gallin.blog.controller.DoLoginAction" method="loginName">
            <result name="login">/WEB-INF/admin/loginName.jsp</result>
            <result name="success">/WEB-INF/admin/loginPass.jsp</result>
        </action>
        <action name="loginConfirm" class="com.gallin.blog.controller.DoLoginAction" method="dologin">
            <result name="login">/WEB-INF/admin/loginPass.jsp</result>
            <result name="success">/index.jsp</result>
        </action>
    </package>
</struts>